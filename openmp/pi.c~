#include<omp.h>
#include<stdio.h>
int main(int argc,char *argv[])
{
	int th_id,n;
	float area=0.0,pi,x;
	printf("Enter number of segements : ");
	scanf("%d",&n);
	#pragma omp parallel for private(th_id) num_threads(3)
	{
		int i;
		for(i=0;i<n;i++)
		{
			x=(i+0.5)/n;
			area+=4.0/(1+x*x);
		}
	}
	pi=area/n;
	printf("Value of pi= %d\n",pi);
}
